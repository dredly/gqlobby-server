{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES6", "ESNext"],
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "lib", 
    "declaration": true
  },
  "include": [
    "src"
  ]
}
